<.header>
  <%= @set_song.title %>
  <:actions>
    <%= if @current_user && @current_user.role == "admin" do %>
      <.link href={~p"/set_songs/#{@set_song}/edit"}>
        <.button>Edit</.button>
      </.link>
    <% end %>
  </:actions>
</.header>

<.list>
  <:item title="Set">
    <%= if @set_song.set do %>
      <.link href={~p"/sets/#{@set_song.set.id}"} class="text-dosio-mint hover:text-white"><%= @set_song.set.title %></.link>
    <% else %>
      <span class="text-dosio-teal/60">No set</span>
    <% end %>
  </:item>
  <:item title="Bandcamp Link">
    <.link href={bandcamp_url_from_schema(@set_song)} target="_blank" class="text-dosio-mint hover:text-white">Listen</.link>
  </:item>
  <:item title="Duration"><%= @set_song.duration |> seconds_to_human_readable %></:item>
  <:item title="Song">
    <%= if @set_song.song do %>
      <.link href={~p"/songs/#{@set_song.song.id}"} class="text-dosio-mint hover:text-white"><%= @set_song.song.display_name || @set_song.song.title %></.link>
    <% else %>
      <span class="text-dosio-teal/60">No song</span>
    <% end %>
  </:item>
  <:item title="Variants">
    <%= if @set_song.variants && length(@set_song.variants) > 0 do %>
      <div class="flex flex-wrap gap-2">
        <%= for variant <- @set_song.variants do %>
          <div class="inline-flex items-center gap-1">
            <.link navigate={~p"/variants/#{variant}"} class={"inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium #{variant_color(variant.category)} hover:opacity-80"}>
              <%= variant.name %>
            </.link>
            <%= if @current_user do %>
              <.link href={~p"/set_songs/#{@set_song}/remove_variant/#{variant}"} method="delete" class="text-dosio-teal/60 hover:text-red-400 text-xs" data-confirm="Remove this variant?">
                Ã—
              </.link>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <span class="text-dosio-teal/60">None</span>
    <% end %>
  </:item>
</.list>

<%= if @current_user do %>
  <div class="mt-6 border-t border-dosio-mint/20 pt-4">
    <h3 class="text-sm font-medium text-dosio-teal mb-2">Add Variant</h3>

    <div class="flex flex-wrap gap-4">
      <%= if length(@available_variants) > 0 do %>
        <form action={~p"/set_songs/#{@set_song}/add_variant"} method="post" class="flex gap-2 items-end">
          <input type="hidden" name="_csrf_token" value={Phoenix.Controller.get_csrf_token()} />
          <div>
            <label for="variant_id" class="block text-xs text-dosio-teal/80">Existing variant</label>
            <select name="variant_id" id="variant_id" class="mt-1 block rounded-md border-dosio-mint/30 shadow-sm text-sm">
              <%= for variant <- @available_variants do %>
                <option value={variant.id}><%= variant.name %></option>
              <% end %>
            </select>
          </div>
          <button type="submit" class="px-3 py-1.5 text-sm bg-dosio-mint text-dosio-dark rounded hover:bg-white">Add</button>
        </form>
      <% end %>

      <form action={~p"/set_songs/#{@set_song}/add_new_variant"} method="post" class="flex gap-2 items-end">
        <input type="hidden" name="_csrf_token" value={Phoenix.Controller.get_csrf_token()} />
        <div>
          <label for="variant_name" class="block text-xs text-dosio-teal/80">New variant name</label>
          <input type="text" name="variant[name]" id="variant_name" required class="mt-1 block rounded-md border-dosio-mint/30 shadow-sm text-sm" placeholder="e.g. Psy" />
        </div>
        <div>
          <label for="variant_category" class="block text-xs text-dosio-teal/80">Category</label>
          <select name="variant[category]" id="variant_category" class="mt-1 block rounded-md border-dosio-mint/30 shadow-sm text-sm">
            <option value="version">version</option>
            <option value="guest">guest</option>
            <option value="acoustic">acoustic</option>
            <option value="extended">extended</option>
            <option value="cover">cover</option>
            <option value="remix">remix</option>
            <option value="reprise">reprise</option>
            <option value="transition">transition</option>
            <option value="other">other</option>
          </select>
        </div>
        <button type="submit" class="px-3 py-1.5 text-sm bg-dosio-mint text-dosio-dark rounded hover:bg-white">Create</button>
      </form>
    </div>
  </div>
<% else %>
  <div class="mt-6 border-t border-dosio-mint/20 pt-4">
    <p class="text-sm text-dosio-teal/60">
      <.link href={~p"/login"} class="text-dosio-mint hover:underline">Log in</.link> to add or remove variants.
    </p>
  </div>
<% end %>
